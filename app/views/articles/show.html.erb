<h1 class="text-center mt-4">Article details</h1>

<div class="row justify-content-md-center">
  <div class="card text-center shadow mb-5 bg-white rounded" style="width: 18rem;">
    <div class="card-header font-italic">
      by Mark Rogers
    </div>

    <div class="card-body">
      <h5 class="card-title">
        <%= simple_format(@article.title) %>
      </h5>

      <div class="card-text text-left">
        <%= simple_format(@article.description) %>
      </div>
  
      <!-- Buttons -->
      <%= link_to 'Edit', edit_article_path(@article), class: "btn btn-success" %>
      <%= link_to 'Delete', article_path(@article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
    </div>

    <div class="card-footer text-muted small">
      Created <%= time_ago_in_words(@article.created_at) %> ago.  Last edited <%= time_ago_in_words(@article.updated_at) %> ago.
    </div>

    <%= link_to 'Return to listing', articles_path, class: "btn btn-info" %>

  </div>
</div>
