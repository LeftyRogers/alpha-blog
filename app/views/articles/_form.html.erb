<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'shared/errors', obj: @article %>
  
      <%= form_with(model: @article, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control", placeholder: "Article title" %>
          </div>
        </div>
  
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control", placeholder: "Article description" %>
          </div>
        </div>
  
        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light bg-success" %>
          <%= link_to "Cancel", articles_path, class: "btn btn-outline-light bg-danger" %>
        </div>
      <% end %>
  
    </div>
  </div>
</div>
