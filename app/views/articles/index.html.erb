<div id="page-content">
  <h1 class="text-center mt-4">Articles</h1>
  
  <div class="container">
      <center>
        <% @articles.each do |article| %>
          <div class="row">
            <div class="col-8 mt-4">
              <div class="card text-center shadow mb-5 bg-white rounded" style="width: 18rem;">
                <div class="card-header font-italic">
                  by Mark Rogers
                </div>
                <div class="card-body">
                  <h5 class="card-title"><%= link_to article.title, article_path(article), class: "text-info" %></h5>
                  <p class="card-text"><%= truncate(article.description, length: 100) %></p>
                  <%= link_to 'Show', article_path(article), class: "btn btn-info"  %>
                  <%= link_to 'Edit', edit_article_path(article), class: "btn btn-success" %>
                  <%= link_to 'Delete', article_path(article), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
                  <div class="card-footer text-muted small">
                    Created on <%= article.created_at %>.  Last edited on <%= article.updated_at %>.
                  </div>
                </div>
              </div>
            </div>
          </div>
        <% end %>
      </center>
  </div>
  
  <p>
    <%= link_to 'Create new article', new_article_path %> |
    <%= link_to 'Home', root_path %>
  </p>
</div>
