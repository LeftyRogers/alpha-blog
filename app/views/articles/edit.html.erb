<h1>Edit article</h1>

<% if @article.errors.any? %>
  <h4>The following errors prevented the article from being saved.</h4>
  <ul>
  <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg %>
  <% end %>
  </ul>
<% end %>

<%= form_with(model: @article, local: true) do |f| %>
  <p> <b><%= f.label :title %>:</b> <%= f.text_field :title, size: "32" %> </p>
  <p> <b><%= f.label :description %>:</b><br><%= f.text_area :description, size: "64x4" %> </p>
  <p> <%= f.submit %> </p>
<% end %>

<p>
  <%= link_to 'Cancel edit and return to articles listing', articles_path %>
</p>
